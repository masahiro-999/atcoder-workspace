    "version": "2.0.0",
    "tasks": [
          {
            "label": "Test AtCoder Problem",
            "type": "shell",
            "command": "atcoder-tools test",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
              "reveal": "always",
              "focus": true,
              "panel": "shared",
            }
          },
          {
            "label": "atcoder-tools submit",
            "type": "shell",
            "command": "atcoder-tools submit",
            "group": "atcoder-tools",
            "presentation": {
              "reveal": "always",
              "focus": true,
              "panel": "shared",
            },
            "options": {
              "cwd": "${fileDirname}"
            },
        },
   ]
}